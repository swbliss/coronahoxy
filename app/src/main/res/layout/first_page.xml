<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/first_check_route"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            android:background="@drawable/check_route"
            android:text="동선 체크 하기"
            android:gravity="center"
            android:textSize="28dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_share_route"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintTop_toBottomOf="@id/first_check_route"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            android:background="@drawable/share_route"
        >
        <TextView
                android:id="@+id/first_share_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="2"
                app:layout_constraintTop_toBottomOf="@id/first_for_definite_diagnosis"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="내 동선 공유 하기"
                android:textSize="32dp"
                android:gravity="top|center_horizontal"
                />
        <TextView
                android:id="@+id/first_for_definite_diagnosis"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintVertical_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/first_share_text"
                android:text="확진자 전용"
                android:gravity="left|center_vertical"
                android:paddingLeft="32dp"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.naver.maps.map.MapView
            android:id="@+id/first_map_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintTop_toBottomOf="@id/first_share_route"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"

            />

</androidx.constraintlayout.widget.ConstraintLayout>
