<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Route.RouteCheckActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/route_top_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/route_recycler"
            android:background="#abcdef"
        >
        <ImageView
                android:id="@+id/route_back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/back_icon"
                android:background="@drawable/back_button"
                android:layout_marginLeft="8dp"
            />
        <TextView
                android:id="@+id/route_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="확진자와 동선 비교"
                android:gravity="center"
                android:textSize="24dp"
                android:layout_marginRight="32dp"
                app:layout_constraintLeft_toRightOf="@id/route_back_button"
                app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/route_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/route_top_bar"
            app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
